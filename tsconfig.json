{
    "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "removeComments": false,
      "outDir": "dist",
      "module": "commonjs",
      "lib": ["esnext", "dom"],
      "sourceMap": true
    },
    "include": ["./src"]
  }